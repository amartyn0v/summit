{
  "name": "summit",
  "version": "0.1.0",
  "private": true,
  "description": "Service for collecting, summarizing, and publishing scientific articles to Telegram.",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "dev:api": "tsx apps/api-gateway/src/main.ts",
    "dev:scheduler": "tsx apps/scheduler/src/index.ts",
    "dev:summarizer": "tsx apps/summarizer/src/index.ts",
    "dev:publisher": "tsx apps/publisher/src/index.ts",
    "lint": "eslint --ext .ts ./apps ./packages ./scripts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "start:api": "tsx apps/api-gateway/src/main.ts",
    "start:scheduler": "tsx apps/scheduler/src/index.ts",
    "start:summarizer": "tsx apps/summarizer/src/index.ts",
    "start:publisher": "tsx apps/publisher/src/index.ts",
    "telegram:test": "tsx scripts/send-test-telegram.ts",
    "ingest:naturescience": "tsx scripts/ingest-nature-science.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/sensible": "^5.6.0",
    "@prisma/client": "^5.21.1",
    "amqplib": "^0.10.4",
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.2",
    "fastify-plugin": "^4.5.1",
    "node-cron": "^3.0.3",
    "openai": "^4.67.2",
    "pdf-parse": "^1.1.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "telegraf": "^4.16.3",
    "undici": "^6.19.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prisma": "^5.21.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
