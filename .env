# Core database and messaging
# Используйте имена сервисов (`postgres`, `rabbitmq`, `redis`), если запускаете приложение в Docker.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/summit
RABBITMQ_URL=amqp://guest:guest@localhost:5672
REDIS_URL=redis://localhost:6379

# Telegram bot credentials
BOT_TOKEN=
OWNER_TELEGRAM_USER_ID=0
CHANNEL_CHAT_ID=SummIt!
DRY_RUN_TELEGRAM=false

# OpenAI configuration
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini
PROVIDER=openai
SUMMARY_MAX_LENGTH=1000

# Scheduler and timezone
CRAWL_WINDOW=03:00-05:00
SCHEDULER_START_HOUR=3
SCHEDULER_END_HOUR=5
PUBLICATION_HOUR_MSK=11
TIMEZONE_PUBLICATION=Europe/Moscow
TZ_ADMIN=Europe/Amsterdam

# Basic auth for API gateway
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=admin

# Logging
LOG_LEVEL=info
